{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://github.com/tjurczyk/arkadia-data/knowledge_data.schema.json",
  "type": "object",
  "title": "The root schema",
  "description": "Knowledge schema.",
  "default": {},
  "required": [
    "books"
  ],
  "properties": {
    "version": {
      "$id": "#/properties/version",
      "type": "integer",
      "title": "The version of schema",
      "default": 0,
      "examples": [
        2
      ]
    },
    "books": {
      "default": {},
      "required": [],
      "title": "books details",
      "additionalProperties": true,
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": [
            "mianownik",
            "dopelniacz",
            "biernik",
            "categories"
          ],
          "properties": {
            "mianownik": {
              "type": "string"
            },
            "dopelniacz": {
              "type": "string"
            },
            "biernik": {
              "type": "string"
            },
            "categories": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          }
        }
      }
    },
    "additionalProperties": true
  }
}